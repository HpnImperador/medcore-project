# Banco de dados
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/medcore_db?schema=public"

# JWT
JWT_SECRET="trocar_em_producao"
JWT_EXPIRES_IN="12h"
JWT_REFRESH_SECRET="trocar_em_producao_refresh"
JWT_REFRESH_EXPIRES_IN="7d"
JWT_MAX_ACTIVE_SESSIONS=5

# Proteção de autenticação
AUTH_MAX_FAILED_ATTEMPTS=5
AUTH_ATTEMPT_WINDOW_MINUTES=10
AUTH_LOCK_MINUTES=15

# Agenda de consultas
APPOINTMENT_DURATION_MINUTES=30
APPOINTMENT_SLOT_INTERVAL_MINUTES=30
APPOINTMENT_WORKDAY_START_HOUR=8
APPOINTMENT_WORKDAY_END_HOUR=18
APPOINTMENT_BREAK_START_HOUR=12
APPOINTMENT_BREAK_END_HOUR=13

# Integração n8n (opcional)
N8N_APPOINTMENTS_WEBHOOK_URL=""

# Outbox processor
OUTBOX_POLL_INTERVAL_MS=5000
OUTBOX_BATCH_SIZE=20
OUTBOX_MAX_ATTEMPTS=10

# Alertas operacionais do Outbox
OUTBOX_ALERT_PENDING_THRESHOLD=50
OUTBOX_ALERT_FAILED_THRESHOLD=10
OUTBOX_ALERT_OLDEST_PENDING_SECONDS=300
OUTBOX_ADMIN_RATE_LIMIT_WINDOW_SECONDS=60
OUTBOX_ADMIN_RATE_LIMIT_MAX_REQUESTS=120

# Health alert webhook (opcional)
HEALTH_ALERT_WEBHOOK_URL=""
HEALTH_ALERT_COOLDOWN_MINUTES=10

# Limpeza automática do Outbox (safe by default)
OUTBOX_AUTO_CLEANUP_ENABLED=false
OUTBOX_AUTO_CLEANUP_ALLOW_NON_PROD=false
OUTBOX_AUTO_CLEANUP_RUN_ON_START=false
OUTBOX_AUTO_CLEANUP_INTERVAL_MS=86400000
OUTBOX_AUTO_CLEANUP_RETENTION_DAYS=30
OUTBOX_AUTO_CLEANUP_INCLUDE_FAILED=false
OUTBOX_AUTO_CLEANUP_DRY_RUN=true
OUTBOX_AUTO_AUDIT_CLEANUP_ENABLED=true
OUTBOX_AUDIT_RETENTION_DAYS=90
OUTBOX_MAINTENANCE_SYSTEM_USER_ID="00000000-0000-0000-0000-000000000000"
